<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
</head>
<body>
    <h1>Register</h1>

    <form method="POST" action="/register" enctype="multipart/form-data">
      <div>
        <input type="text" id="fullName" name="fullName" placeholder="Full Name" required />
      </div>
      <div>
        <input type="text" id="email"name="email"placeholder="Email" required/>
      </div>
      <div>
        <input type="text" id="phoneNumber" name="phoneNumber" placeholder="phoneNumber" required/>
      </div>
      <div>
        <input type="text" id="password" name="password" placeholder="Password" required/>
      </div>
      <!-- <div>
        <input type="password" id="password2" name="password2" placeholder="Confirm Password"required/>
      </div> -->
      <div class="upload">
        <label><input type="file" name="profilePicture" accept="image/*,.pdf" style="display: none"/>profilePicture</label>
      </div>
      <div>
        <input type="submit" value="Register" />
      </div>

      <a href="/users/login">Already registered? Login here</a>
    </form>
  </body>
</html>